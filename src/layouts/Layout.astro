---
import DesktopNavigation from "../components/DesktopNavigation.svelte";
import MobileNavigation from "../components/MobileNavigation.svelte";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<DesktopNavigation />
		<MobileNavigation />
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "MonaSans";
		src: url("/fonts/MonaSans.woff2");
	}

	p {
		font-weight: var(--font-weight-regular);
		font-size: 18px;
		line-height: var(--line-height);
	}

	h1 {
		font-weight: var(--font-weight-bold);
	}

	/* 	
	Basic color palette stuff 
 */
	:root {
		--color-primary-700: hsl(235, 58%, 76%);
		--color-primary-600: hsl(235, 58%, 66%);
		--color-primary-500: hsl(235, 58%, 56%);
		--color-primary-400: hsl(235, 58%, 46%);
		--color-primary-300: hsl(235, 58%, 36%);

		--color-secondary-300: hsl(137, 59%, 34%);
		--color-secondary-400: hsl(137, 59%, 44%);
		--color-secondary-500: hsl(137, 59%, 54%);
		--color-secondary-600: hsl(137, 59%, 64%);
		--color-secondary-700: hsl(137, 59%, 74%);

		--color-bg: hsl(113, 0%, 98%);
		--color-text: hsl(198, 32%, 8%);

		--font-family: "MonaSans";
		--font-weight-light: 300;
		--font-weight-regular: 400;
		--font-weight-bold: 700;
		--line-height: 1.5;
	}

	[data-theme="dark"] {
		--color-bg: hsl(113, 0%, 10%);
		--color-text: hsl(315, 10%, 98%);
	}

	[data-theme="light"] {
		--color-bg: hsl(113, 0%, 98%);
		--color-text: hsl(198, 32%, 8%);
	}
	/*
  1. Use a more-intuitive box-sizing model.
*/
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	/*
  2. Remove default margin
*/
	* {
		margin: 0;
	}
	/*
  Typographic tweaks!
  3. Add accessible line-height
  4. Improve text rendering
*/
	body {
		font-family: var(--font-family);
		line-height: var(--line-height);
		background-color: var(--color-bg);
		-webkit-font-smoothing: antialiased;
	}
	/*
  5. Improve media defaults
*/
	img,
	picture,
	video,
	canvas,
	svg {
		display: block;
		max-width: 100%;
	}
	/*
  6. Remove built-in form typography styles
*/
	input,
	button,
	textarea,
	select {
		font: inherit;
	}
	/*
  7. Avoid text overflows
*/
	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		overflow-wrap: break-word;
	}
</style>
