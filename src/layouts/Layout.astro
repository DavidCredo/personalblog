---
import DesktopNavigation from "../components/Navigation/DesktopNavigation.svelte";
import MobileNavigation from "../components/Navigation/MobileNavigation.svelte";
import ThemeToggle from "../components/ThemeToggle.svelte";
export interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<DesktopNavigation />
			<div class="toggle-wrapper">
				<ThemeToggle client:only="svelte" />
			</div>
			<MobileNavigation client:load />
		</header>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "MonaSans";
		src: url("/fonts/MonaSans.woff2");
	}

	header {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	p {
		font-weight: var(--font-weight-regular);
		line-height: var(--line-height);
		color: var(--color-text);
	}

	h1 {
		font-weight: var(--font-weight-bold);
	}

	/* 	
	Basic color palette stuff 
 */
	:root {
		--color-primary: hsl(235, 64%, 50%);

		--color-secondary: hsl(137, 59%, 54%);

		--color-bg: hsl(113, 0%, 98%);
		--color-text: hsl(198, 32%, 8%);

		--font-family: "MonaSans";
		--font-weight-light: 300;
		--font-weight-regular: 400;
		--font-weight-bold: 700;
		--line-height: 1.5;
	}

	html {
		font-size: 1rem;
		font-size: clamp(1rem, 0.9rem + 0.5vw, 1.5rem);
	}

	[data-theme="dark"] {
		--color-bg: hsl(113, 0%, 10%);
		--color-text: hsl(315, 10%, 98%);
		--color-primary: hsl(235, 75%, 65%);
		--color-secondary: hsl(137, 69%, 50%);
	}

	[data-theme="light"] {
		--color-bg: hsl(113, 0%, 98%);
		--color-text: hsl(198, 32%, 8%);
		--color-primary: hsl(235, 64%, 50%);
		--color-secondary: hsl(137, 69%, 44%);
	}
	/*
  1. Use a more-intuitive box-sizing model.
*/
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	/*
  2. Remove default margin
*/
	* {
		margin: 0;
	}
	/*
  Typographic tweaks!
  3. Add accessible line-height
  4. Improve text rendering
*/
	body {
		font-family: var(--font-family);
		line-height: var(--line-height);
		background-color: var(--color-bg);
		-webkit-font-smoothing: antialiased;
		transition: background-color 0.5s ease;
	}
	/*
  5. Improve media defaults
*/
	img,
	picture,
	video,
	canvas,
	svg {
		display: block;
		max-width: 100%;
	}
	/*
  6. Remove built-in form typography styles
*/
	input,
	button,
	textarea,
	select {
		font: inherit;
	}
	/*
  7. Avoid text overflows
*/
	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		overflow-wrap: break-word;
	}
</style>
